---
// src/pages/services.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/services.css";

// Set up page metadata
const pageTitle = "Freelance Services — Wiam EL Khammal";
const pageDescription =
  "Professional freelance development services by Wiam EL Khammal — Web development, API development, technical consultation, and infrastructure setup with transparent pricing.";
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  canonical="https://kchndz.dev/services"
>
  <!-- Hero Section -->
  <section
    class="hero section container service-hero"
    aria-label="Freelance services overview"
  >
    <div class="hero-content">
      <div class="hero-tagline reveal">
        <!-- <p class="hero-quote lead-quote design-quote">
          <span class="quote-mark open">"</span>Quality development services with transparent pricing.<span class="quote-mark close">"</span>
        </p> -->
      </div>
      <h1 class="reveal defer-on-scroll">Professional Freelance Services</h1>
      <p class="muted reveal delay-1">
        Fixed-price packages for web development, API development, technical
        consultation, and infrastructure setup. Fast delivery, transparent
        pricing, no hidden costs.
      </p>
      <div class="hero-cta reveal delay-2">
        <a class="btn" href="#services">Browse services</a>
        <a class="btn ghost" href="#contact-form">Get quote</a>
      </div>
    </div>
  </section>

  <!-- Services Filter -->
  <section
    class="section container services-filter-section"
    id="services-filter"
  >
    <div class="services-filter-container">
      <h2 class="section-title">Find the perfect service for your needs</h2>
      <div class="filter-controls">
        <div class="search-box">
          <input
            type="text"
            id="service-search"
            placeholder="Search services..."
          />
          <i class="fas fa-search"></i>
        </div>
        <div class="filter-buttons">
          <button class="filter-btn active" data-category="all"
            >All Services</button
          >
          <button class="filter-btn" data-category="development"
            >Development</button
          >
          <button class="filter-btn" data-category="infrastructure"
            >Infrastructure</button
          >
          <button class="filter-btn" data-category="consultation"
            >Consultation</button
          >
        </div>
        <div class="sort-controls">
          <select id="price-sort">
            <option value="default">Sort by</option>
            <option value="price-low">Price: Low to High</option>
            <option value="price-high">Price: High to Low</option>
            <option value="delivery">Fastest Delivery</option>
          </select>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section
    id="services"
    class="section container service-block services-grid-section"
    aria-labelledby="services-title"
  >
    <div class="services-grid-container">
      <div class="service-grid" id="services-grid">
        <!-- Services will be loaded dynamically from JSON files -->
        <div class="loading-services">
          <p>Loading services...</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Me Section -->
  <section
    class="section container service-intro"
    aria-labelledby="why-choose-title"
  >
    <h2 id="why-choose-title" class="section-title reveal">
      Why choose my services?
    </h2>
    <div class="service-intro-grid reveal delay-1">
      <div class="service-intro-copy">
        <p class="lead">
          With years of experience in software development and a commitment to
          quality, I deliver professional services that exceed expectations.
          Every project is treated with care and attention to detail.
        </p>
        <ul class="service-commitments">
          <li>
            <span class="bullet"></span>Fixed pricing with no hidden costs
          </li>
          <li>
            <span class="bullet"></span>Fast delivery and reliable communication
          </li>
          <li>
            <span class="bullet"></span>Professional documentation and handover
          </li>
          <li>
            <span class="bullet"></span>Post-delivery support and maintenance
          </li>
        </ul>
      </div>
      <aside class="service-intro-aside">
        <div class="service-glow-card">
          <h3>Service guarantees</h3>
          <ul>
            <li>100% satisfaction guarantee</li>
            <li>Free revisions as specified</li>
            <li>Secure payment through platform</li>
            <li>Professional communication</li>
            <li>On-time delivery commitment</li>
          </ul>
        </div>
      </aside>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section
    id="contact-form"
    class="section container service-cta"
    aria-label="Contact form"
  >
    <div class="service-cta-card reveal">
      <h2>Ready to get started?</h2>
      <p>
        Contact me to discuss your project requirements and get a custom quote.
        I respond to all inquiries within 24 hours.
      </p>
      <div class="cta-actions">
        <button class="btn" id="general-contact-btn">Get in touch</button>
        <a class="btn ghost" href="mailto:contact@kchndz.dev"
          >Email directly</a
        >
      </div>
    </div>
  </section>

  <!-- Service Detail Modal -->
  <div id="service-modal" class="service-modal">
    <div class="service-modal-content">
      <div class="service-modal-header">
        <h2 id="modal-title"></h2>
        <button class="service-modal-close" aria-label="Close modal">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <div class="service-modal-body">
        <div id="modal-content"></div>
      </div>
    </div>
  </div>

  <script src="/js/services-loader.js" is:inline></script>
  <script src="/js/services.js" is:inline></script>
  <script src="/js/services-filter.js" is:inline></script>
</BaseLayout>
